#!/usr/bin/env node
'use strict';
/**
 *   Appcelerator Titanium Live Reload Development Tool
 */
const program = require('commander'),
	pkgConf = require('../package.json');

program
	.version(pkgConf.version)
	.usage('cmd [options]')
	.command('install <name>', 'install hook')
	.command('rm <name>', 'rm related things').alias('remove')
	.command('server [options]', 'Server related things')
	.option('--no-banner', 'disable program banner output')
	.option('--no-colors', 'disable program cli color output', true)
	.parse(process.argv);
