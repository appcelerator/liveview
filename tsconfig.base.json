{
  "extends": "@tsconfig/node12/tsconfig.json",

  "compilerOptions": {
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "declaration": true,
    "preserveWatchOutput": true,
    "baseUrl": ".",
    "paths": {
      "@liveview/*": ["packages/*/src"]
    },
    "typeRoots": [
      "node_modules/@types",
      "packages/appcd-plugin/types",
      "packages/compiler/types",
      "packages/shared-utils/types"
    ]
  },

  "exclude": ["node_modules", "dist"]
}
